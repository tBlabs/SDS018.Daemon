{
    "name": "bluepill.daemon",
    "version": "1.0.0",
    "description": "SDS018 Driver and Host",
    "main": "./bin/startup.js",
    "author": "tB",
    "license": "beerware",
    "scripts": {
        "xpreinstall": "sudo npm i -g typescript jest tslint npm-run-all",
        "start": "node ./bin/startup.js",
        "run": "npm run clean && npm run build && clear && npm run start",
        "autotranspilation": "tsc --watch",
        "autorun": "nodemon ./bin/startup.js --port 3005 --serial /dev/ttyUSB0 --log",
        "serve": "npm run clean && run-p autotranspilation autorun",
        "serve:win": "run-p autotranspilation autorun",
        "lint": "tslint -c tslint.json './src/**/*.{ts,tsx}' --format msbuild",
        "test": "jest --runInBand",
        "build": "tsc -p .",
        "clean": "rm ./bin -rf",
        "autofix": "tslint --fix --project .",
        "push": "git push origin master",
        "find": "ls /dev | grep \"USB\""
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.2",
        "@types/jasmine": "^3.4.6",
        "@types/jest": "^24.0.23",
        "@types/lodash": "^4.14.149",
        "@types/node": "^12.12.9",
        "@types/serialport": "^7.0.4",
        "@types/socket.io": "^2.1.4",
        "jest": "^24.9.0",
        "moq.ts": "^3.0.0",
        "nodemon": "^1.19.4",
        "npm-check-updates": "^3.2.1",
        "npm-run-all": "^4.1.5",
        "ts-jest": "^24.1.0",
        "typescript": "^3.7.2"
    },
    "dependencies": {
        "asyncawait": "^1.0.8",
        "express": "^4.17.1",
        "inversify": "^5.0.1",
        "jasmine-core": "^3.5.0",
        "minimist": "^1.2.3",
        "os": "^0.1.1",
        "reflect-metadata": "^0.1.13",
        "serialport": "^8.0.5",
        "socket.io": "^2.3.0"
    }
}
